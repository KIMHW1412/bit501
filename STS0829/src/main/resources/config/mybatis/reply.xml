<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="reply">

	<insert id="add" parameterType="net.hb.crud.ReplyDTO">
		insert into hobby
		values(
		hobby_seq.nextVal, #{name}, #{title}, #{content}, #{gender},
		#{hobby},
		#{img_file_name} )
	</insert>

	<select id="selectAll" resultType="net.hb.crud.ReplyDTO">
		select rownum rn, h.* from
		hobby h
	</select>

	<delete id="del" parameterType="int">
		delete from hobby where hobby_idx
		= #{hobby_idx}
	</delete>

	<update id="edit" parameterType="net.hb.crud.ReplyDTO">
		update hobby set
		name=#{name},title=#{title}, content=#{content},
		gender=#{gender},
		hobby=#{hobby},img_file_name=#{img_file_name}
		where
		hobby_idx=#{hobby_idx}
	</update>

</mapper>















